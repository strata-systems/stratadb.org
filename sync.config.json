{
  "sources": {
    "strata-core": {
      "repo": "https://github.com/strata-systems/strata-core.git",
      "ref": "main",
      "localPath": "../strata-core",
      "mappings": [
        {
          "from": "docs",
          "to": "docs",
          "exclude": ["architecture/**"]
        },
        {
          "from": "docs/architecture",
          "to": "docs-architecture"
        }
      ],
      "linkRewrites": [
        {
          "comment": "Cross-plugin: architecture/*.md from root-level docs",
          "pattern": "^architecture/(.+)\\.md$",
          "replacement": "/architecture/$1",
          "scope": "docs"
        },
        {
          "comment": "Cross-plugin: ../architecture/*.md from subdirectory docs",
          "pattern": "^\\.\\./architecture/(.+)\\.md$",
          "replacement": "/architecture/$1",
          "scope": "docs"
        },
        {
          "comment": "External: CONTRIBUTING.md → GitHub",
          "pattern": "^(\\.\\./)*CONTRIBUTING\\.md$",
          "replacement": "https://github.com/strata-systems/strata-core/blob/main/CONTRIBUTING.md",
          "scope": "docs"
        },
        {
          "comment": "External: CHANGELOG.md → GitHub",
          "pattern": "^(\\.\\./)*CHANGELOG\\.md$",
          "replacement": "https://github.com/strata-systems/strata-core/blob/main/CHANGELOG.md",
          "scope": "docs"
        }
      ]
    }
  }
}
